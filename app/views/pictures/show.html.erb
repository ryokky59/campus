<div class="show_content">
  <div class="show_title">
    <h1>Show</h1>
  </div>

  <div class="show_image">
    <%= image_tag @picture.image %>
  </div>

  <div class="show_text">
    <%= @picture.content %>
  </div>

  <div class="show_name">
    <p>ユーザー名: <%= @user.name %></p>
  </div>

  <div class="show_btn">
    <% if @picture.user_id == current_user.id %>
      <%= link_to '編集', edit_picture_path(id: @picture.id), class:'btn btn-primary' %>
      <%= link_to '削除', picture_path(id: @picture.id), method: :delete, class: 'btn btn-danger' %>
    <% else %>
      <% if @favorite.present? %>
        <%= link_to 'お気に入り解除', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
      <% else %>
        <%= link_to 'お気に入り', favorites_path(picture_id: @picture.id), method: :post, class: 'btn btn-primary' %>
      <% end %>
    <% end %>
  </div>
</div>
