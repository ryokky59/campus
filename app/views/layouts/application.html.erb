<!DOCTYPE html>
<html>
  <head>
    <title>CAMPUS</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header>
      <h1>CAMPUS</h1>
    </header>

    <nav class="container">
      <ul>
        <div class="header_link row">
        <% if logged_in? %>
          <li class="col-lg-3 col-sm-6 col-xs-12"><%= link_to "Profile", user_path(current_user.id) %></li>
          <li class="col-lg-3 col-sm-6 col-xs-12"><%= link_to 'Create', new_picture_path %></li>
          <li class="col-lg-3 col-sm-6 col-xs-12"><%= link_to 'List', pictures_path %></li>
          <li class="col-lg-3 col-sm-6 col-xs-12"><%= link_to "Logout", session_path(current_user.id), method: :delete %></li>
        <% else %>
          <li class="col-sm-6 col-xs-12"><%= link_to "Sign up", new_user_path %></li>
          <li class="col-sm-6 col-xs-12"><%= link_to "Login", new_session_path %></li>
        <% end %>
      </div>
      </ul>
    </nav>

    <article>
    <%= yield %>
    </article>

    <footer>
      <address>CAMPUS</address>
    </footer>

  </body>
</html>
